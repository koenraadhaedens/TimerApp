@{
    ViewData["Title"] = "Split Screen App";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            display: flex;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }
        .left {
            width: 80%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f0f0f0;
            padding: 20px;
        }
        .right {
            width: 20%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #fff;
            padding: 20px;
            font-size: 4rem;
        }
        textarea {
            width: 100%;
            height: 90%;
            font-size: 2rem;
        }
        input[type="time"] {
            font-size: 1.5rem;
            margin-top: 20px;
        }
        button {
            font-size: 1.5rem;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="left">
        <div>
            <textarea id="textInput" placeholder="Type text here..."></textarea>
            <br>
            <input type="time" id="timerInput">
            <button onclick="startTimer()">Start Timer</button>
        </div>
    </div>
    <div class="right" id="timerDisplay">
        00:00
    </div>

    <script>
        function startTimer() {
            var endTime = document.getElementById("timerInput").value;
            var display = document.getElementById("timerDisplay");

            if (!endTime) {
                alert("Please enter a valid end time.");
                return;
            }

            var endDate = new Date();
            var [hours, minutes] = endTime.split(':').map(Number);
            endDate.setHours(hours, minutes, 0, 0);

            function updateCountdown() {
                var now = new Date();
                var timeRemaining = endDate - now;

                if (timeRemaining <= 0) {
                    display.textContent = "00:00";
                    clearInterval(countdown);
                    return;
                }

                var minutes = Math.floor(timeRemaining / 60000);
                var seconds = Math.floor((timeRemaining % 60000) / 1000);

                display.textContent = 
                    String(minutes).padStart(2, '0') + ":" + 
                    String(seconds).padStart(2, '0');
            }

            var countdown = setInterval(updateCountdown, 1000);
            updateCountdown();
        }
    </script>
</body>
</html>
